module Guillotine
  module Parser
    grammar SQL
      include SQLSelect
      include SQLDelete
      include SQLTruncate
      include DropTable #TODO: Fix my name
      include SQLTransaction
      include SQLInsert
      include SQLShowTables

      rule sql_statement
        select_expression     /
        delete                /
        truncate              /
        drop_table            /
        transaction_statement /
        insert                /
        show_tables
      end
    end
  end
end